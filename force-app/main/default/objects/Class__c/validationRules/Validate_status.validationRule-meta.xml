<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_status</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &apos;Draft&apos;),  ISCHANGED(Status__c))</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>Status can&apos;t set as draft again.</errorMessage>
</ValidationRule>
