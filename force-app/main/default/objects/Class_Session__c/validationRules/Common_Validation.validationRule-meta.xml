<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Common_Validation</fullName>
    <active>false</active>
    <description>Minutes cannot be zero.</description>
    <errorConditionFormula>OR(Duration__c &lt;= 0, 
Start_Time__c == End_Time__c)</errorConditionFormula>
    <errorMessage>Minutes should be greater than zero.</errorMessage>
</ValidationRule>
